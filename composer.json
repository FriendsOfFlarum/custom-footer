{
    "name": "fof/custom-footer",
    "description": "Allows the Addition of a Custom Footer",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^0.1.0-beta.14",
        "fof/components": "^0.2.0"
    },
    "authors": [
        {
            "name": "Connor Davis",
            "email": "davis@produes.co"
        },
        {
            "name": "David Sevilla Mart√≠n",
            "email": "david.s@redevs.org",
            "role": "Developer"
        }
    ],
    "replace": {
        "davis/flarum-ext-customfooter": "*"
    },
    "autoload": {
        "psr-4": {
            "FoF\\CustomFooter\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF Custom Footer",
            "icon": {
                "name": "fas fa-columns",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/17774-friendsofflarum-custom-footer"
        }
    }
}
